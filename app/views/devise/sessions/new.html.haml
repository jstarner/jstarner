.container.text-left
  %h1 Log in 
  %br/
  = link_to 'Sign in with Facebook', user_facebook_omniauth_authorize_path, :class => 'btn btn-primary btn-xl js-scroll-trigger'
  = link_to 'Sign in with Google', user_google_oauth2_omniauth_authorize_path, :class => 'btn btn-primary btn-xl js-scroll-trigger'
  = link_to 'Sign in with Twitter', user_twitter_omniauth_authorize_path, :class => 'btn btn-primary btn-xl js-scroll-trigger'

  %d.row
    %d.col-md-6
      %br/
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.input :email, autofocus: true
        = f.input :password, autocomplete: 'off'
        = f.check_box :remember_me
        Remember me
        %br/
        %br/
        = f.button :submit, 'Log in', :class => 'btn btn-primary btn-xl js-scroll-trigger'
      %br/
      = render 'devise/shared/links'
