.container.text-left
  %h1 Projects
  %br/
  .row
    - @projects.each do |project|
      .col-lg-4.col-sm-6.portfolio-item
        .card.h-100
          .card-body
            %a.card-img-top= link_to image_tag(project.image, style: 'width:100%;'), project
            %h4.card-title
              %a{:href => 'projectview'}= link_to project.title, project
            %p.card-text= project.short_desc
  %br/
  / Bootstrap core JavaScript
  %script{:src => 'vendor/jquery/jquery.min.js'}
  %script{:src => 'vendor/bootstrap/js/bootstrap.bundle.min.js'}
